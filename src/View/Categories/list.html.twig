{% extends 'layout.html.twig' %}

{% block title %}Olympic Nantais || Liste des catégories{% endblock %}

{% block content %}
    <h1>Liste des catégories :</h1>
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Style</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                {% include "Blocks/_adminTable.html.twig" with {
                    "id" : category.id,
                    "cat" : category.category,
                } %}
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}