{% extends "adminLogin.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
    <h2>Veuillez entrer votre identifiant et votre mot de passe :</h2>
    <form role="form" action="/admin/login" method="POST">
        <div class="col-6 form-group">
            <label>Identifiant :</label>
            <input type="email" id="email" name="email" class="form-control
                {% if errorMail is not null %}is-invalid{% endif %}">
            <div class="invalid-feedback mx-auto">
                {{ errorMail }}
            </div>
        </div>
        <div class="col-6 form-group">
            <label>Mot de passe :</label>
            <input type="password" id="password" name="password" class="form-control
                {% if errorMdp is not null %}is-invalid{% endif %}"">
            <div class="invalid-feedback mx-auto">
                {{ errorMdp }}
            </div>
        </div>
        <div class="col-6 form-group">
            <button type="submit" class="col-4 btn btn-primary">Connexion</button>
            <div class="invalid-feedback mx-auto">
                {{ errorConnexion }}
            </div>
        </div>
    </form>
{% endblock %}