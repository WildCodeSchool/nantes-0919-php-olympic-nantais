{% extends 'adminLayout.html.twig' %}

{% block title %}{% endblock %}

{% block content %}

    <section>

        <h1>Gestion des messages : </h1>
        <!-- sélection des demandes en cours ou archivés -->
        <form method="POST" class="form-row" action="/comments/list">
            <div class="form-group col-4">
                <select class="form-control" id="choiceComments" name="choiceComments">
                    <option value="traitement" selected>A traiter</option>
                    <option value="archiver">Archiver</option>
                </select>
            </div>
            <div class="form-group col-3">
                <a href="/comments/list">
                    <button type="button" class="btn btn-primary">Valider</button>
                </a>
            </div>
        </form>
        <!-- affichage des demandes -->
        <div class="row">
            <table class="table col-12">
                <thead class="table-striped">
                    <tr class="bg-warning">
                        <th scope="col">Nom</th>
                        <th scope="col">Date</th>
                        <th scope="col">Objet</th>
                        <th scope="col">Répondre</th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.firstname }} {{ comment.lastname }}</td>
                            <td>{{ comment.date_time }}</td>
                            <td>{{ comment.object }}</td>
                            <td><button type="button" class="btn btn-success">
                                    <a class="text-white col-3" href="/comments/display/{{ comment.id }}">Répondre</a>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
        </div>

    </section>

{% endblock %}
